---
import { default as ButtonComponent } from './Button.astro';
---

<div class="docs">
  ---
import Layout from '../layouts/Layout.astro';
---

<Layuot title="Button Component</h1>

  <section>
    <h2>Basic Usage</h2>
    <div class="example">
      <ButtonComponent>Example Content</ButtonComponent>
    </div>
    <pre><code>{'<Button>Example Content</Button>'}</code></pre>
  </section>

  <section>
    <h2>Properties</h2>
    <table>
      <thead>
        <tr>
          <th>Prop</th>
          <th>Purpose</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>type</code></td>
          <td
            >Can be: <code>submit</code>, <code>reset</code> or <code
              >button</code
            ></td
          >
        </tr>

        <tr>
          <td><code>disabled</code></td>
          <td>Sets the button to disabled</td>
        </tr>
      </tbody>
    </table>

    <section>
      <h2>Variants</h2>

      <h3>Default Button</h3>
      <div class="example">
        <ButtonComponent>Default Button</ButtonComponent>
      </div>

      <h3>Disabled Button</h3>
      <div class="example">
        <ButtonComponent disabled>Default Button</ButtonComponent>
      </div>
    </section>

    <style>
      .docs {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
      }

      section {
        margin: 2rem 0;
      }

      .example {
        padding: 1.5rem;
        border: 1px solid #eee;
        border-radius: 8px;
        margin: 1rem 0;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin: 1rem 0;
      }

      th,
      td {
        text-align: left;
        padding: 0.75rem;
        border: 1px solid #eee;
      }

      th {
        background: #f5f5f5;
      }

      code {
        background: #f5f5f5;
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        font-size: 0.9em;
      }

      pre {
        background: #f5f5f5;
        padding: 1rem;
        border-radius: 8px;
        overflow-x: auto;
      }

      h2 {
        margin-top: 2rem;
      }

      h3 {
        margin-top: 1.5rem;
      }
    </style>
  </section>
</div>

