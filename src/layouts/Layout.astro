---
import HeaderMenuItem from "../components/HeaderItem/HeaderItem.astro";
import IconChat from "../components/icons/IconChat/IconChat.astro";
import IconNote from "../components/icons/IconNote/IconNote.astro";
import IconInsta from "../components/icons/IconInsta/IconInsta.astro";
import Header from "../components/Header/Header.astro";
import { Font } from "astro:assets";

interface Props {
  title: string;
  instagram: string;
}

const { title, instagram } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Webseite der Elterninitiative Kinderladen KÃ¤nguruh"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <Font cssVariable="--font-fredoka" preload />
  </head>
  <body>
    <div class="page-container">
      <Header />

      <div class="hero">
        <slot name="hero" />
      </div>
      <main>
        <slot />
      </main>

      <footer>
        <div class="insta">
          <HeaderMenuItem text="Instagram" href={instagram}
            ><IconInsta slot="icon" /></HeaderMenuItem
          >
        </div>

        <HeaderMenuItem text="Kontakt" href="/kontakt"
          ><IconChat slot="icon" /></HeaderMenuItem
        >
        <HeaderMenuItem text="Impressum" href="/impressum"
          ><IconNote slot="icon" /></HeaderMenuItem
        >
      </footer>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --kila-accent-color-hsl: 37;

    --kila-accent-light: hsl(var(--kila-accent-color-hsl), 100%, 75%);
    --kila-accent: hsl(var(--kila-accent-color-hsl), 100%, 55%);
    --kila-accent-dark: hsl(var(--kila-accent-color-hsl), 100%, 35%);
    --kila-accent-disabled: hsl(var(--kila-accent-color-hsl), 30%, 55%);

    --accent-gradient: linear-gradient(
      45deg,
      var(--kila-accent),
      var(--kila-accent-light) 30%,
      white 60%
    );
  }

  html {
    font-family: var(--font-fredoka);
  }
</style>

<style>
  body {
    max-width: 1280px;
    margin: 0 auto;
    overflow-x: hidden;
    min-height: 100vh;
  }

  .page-container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    padding: 1rem;
  }

  main {
    margin: auto;
    overflow-x: hidden;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    font-size: 20px;
    flex: 1;

    @media (min-width: 768px) {
      padding: 0;
      overflow-x: visible;
    }
    line-height: 1.6;
  }

  footer {
    display: flex;
    gap: 1rem;
    flex-direction: row;
    padding: 1rem;
    margin-top: auto;
  }

  .insta {
    margin-right: auto;
    display: flex;
  }

  @keyframes gelatine {
    from,
    to {
      transform: scale(1, 1);
    }
    25% {
      transform: scale(0.9, 1.1);
    }
    50% {
      transform: scale(1.1, 0.9);
    }
    75% {
      transform: scale(0.95, 1.05);
    }
  }
</style>
