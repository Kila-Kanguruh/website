---
const { title, className } = Astro.props;
---

<div class={className}>
  <span class="icon">
    <slot name="icon" />
  </span>
  {title && <h2>{title}</h2>}
  <slot />
</div>

<style>
  div {
    border: 9px solid var(--kila-accent);
    text-align: center;
    padding: 1rem;
    border-radius: 17px 5px 5px 9px;
  }

  icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
  }
</style>
