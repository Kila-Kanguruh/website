          { src: "/images/IMG_8920.jpg", alt: "Kila Garden 2" },
          { src: "/images/IMG_8981.jpg", alt: "Kila Küche" },
          { src: "/images/IMG_8983.jpg", alt: "Kila Zimmer 1" },
          { src: "/images/IMG_8984.jpg", alt: "Kila Zimmer 2" },
