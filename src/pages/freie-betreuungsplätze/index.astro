---
import GraphicKidPlay from "../../components/graphics/GraphicKidPlay/GraphicKidPlay.astro";
import HeroImage from "../../components/HeroImage/HeroImage.astro";
import Layout from "../../layouts/Layout.astro";
import Banner from "../../components/Banner/Banner.astro";
import Button from "../../components/Button/Button.astro"
---

<Layout title="freie-betreuungsplätze">
  <HeroImage slot="hero" text="Freie Betreuungsplätze">
    <GraphicKidPlay />
  </HeroImage>
  <Banner title="Wir suchen aktuell 8 Kinder"
    >Jahrgang 07.2021 bis 02.2025
  </Banner>

  <p>
    Bei Interesse meldet euch bitte bei der AG Kila: <a
      href="mailto:agkila@kilakaenguruh.de">agkila@kilakaenguruh.de</a
    > oder benutzt das <a href="/kontakt">Kontaktformular</a>
  </p>

  <!-- TODO: add more kids -->
  <!-- @ts-ignore -->
  <form netlify>
    <label>Termine für Infoveranstaltung <select>
      <option>01.01.25</option>
      <option>01.01.25</option>
      <option>01.01.25</option>
    </select></label>
    <label>Geschlecht des Kindes <select><option>m</option>
    <option>w</option>
    <option>d</option>
    </select></label>

    <label>Name <input type="text" required /></label>
    <label>Alter des Kindes  <input type="number" required /></label>
    <br />
    <label>Email <input type="email" required /></label>
    <br />
    <label>Nachricht <textarea required></textarea></label>
    <br />
    <div class="footer">
      <Button type="submit">Senden</Button>
    </div>
  </form>
</Layout>

<style>
  form {
    display: flex;
    flex-direction: column;
  }

  label {
    display: flex;
    flex-direction: column;
    margin-bottom: 1rem;
    text-align: center;
  }

  select {
    background-color: white;
  }

  input,
  textarea, select {
    padding: 1rem;
    border: 2px solid var(--kila-accent);
  }

  form .footer {
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>

