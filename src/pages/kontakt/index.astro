---
import Button from '../../components/Button/Button.astro';
import HeroImage from '../../components/HeroImage/HeroImage.astro';
import Layout from '../../layouts/Layout.astro';
---

<Layout title="kontakt">
  <HeroImage slot="hero" text="Kontakt" />
  <p>
    Lorem ipsum dolor sit amet consectetur adipisicing elit. Amet ut temporibus
    aliquid eum vero eius veritatis, quo, aliquam tempora quisquam maxime
    voluptatum itaque dicta assumenda libero accusamus earum porro at!k
  </p>

  <!-- The netlify attribute is not recognized, can be ignored -->
  <!-- @ts-ignore -->
  <form netlify>
    <label>Name <input type="text" /></label>
    <br />
    <label>Email <input type="email" /></label>
    <br />
    <label>Nachricht <textarea></textarea></label>
    <br />
    <div class="footer">
      <Button type="submit">Senden</Button>
    </div>
  </form>
</Layout>

<style>
  form {
    display: flex;
    flex-direction: column;
  }

  label {
    display: flex;
    flex-direction: column;
    margin-bottom: 1rem;
    text-align: center;
  }

  input,
  textarea {
    padding: 1rem;
    border: 2px solid var(--kila-accent);
  }

  form .footer {
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
